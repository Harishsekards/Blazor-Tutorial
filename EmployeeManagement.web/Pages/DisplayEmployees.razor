@inherits DisplayEmployeesBase

    <div class="card m-3" style="min-width:18rem;max-width:30.5%;">
        <div class="card-header">          
                <input type="checkbox" @onchange="EmployeeCBSelected"/>
                <h3>@Employee.FirstName @Employee.LastName</h3>           
        </div>
        <img src="@Employee.PhotoPath" class="card-img-top imageThumbnail" />
        @if (ShowFooter)
        {
            <div class="card-footer text-center">
                <a href="@($"employeedetails/{Employee.EmployeeId}")" class="btn btn-primary">View</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        }
    </div>


