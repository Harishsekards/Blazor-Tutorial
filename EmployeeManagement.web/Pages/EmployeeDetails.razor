@page "/employeedetails/{id}"
@inherits EmployeeDetailsBase
<h3>Employee Details</h3>
@if (Employee == null || Employee.Department == null)
{
    <div class="Spinner"></div>
}
else
{
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Employee.FirstName @Employee.LastName</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="@Employee.PhotoPath" asp-append-version="true" />
                <h4>EmployeeId :  @Employee.EmployeeId </h4>
                <h4>Email      :  @Employee.Email  </h4>
                <h4>Department :  @(Employee.Department.DepartmentName ?? "Not Alloted")</h4>
            </div>
            <div class="card-footer text-center">
                <a href="/" class="btn btn-primary m-1">Back</a>
                <a asp-controller="home" asp-action="Edit" asp-route-id="" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    </div>

</div>
}



