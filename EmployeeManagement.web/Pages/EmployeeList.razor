@page "/"
@inherits EmployeeListBase
<h3>Employee List</h3>
<h6>Selected Employee Count : @SelectedEmployeeCount</h6>
<input type="checkbox" id="showfooter" @bind="ShowFooter"/>
<label for="showfooter">Show Footer</label>

<div class="card-deck">
    @foreach (var employee in Employees)
    {
        <DisplayEmployees Employee ="employee" ShowFooter="ShowFooter" OnEmployeeSelection="EmployeeSelected"></DisplayEmployees>   
    }
</div>
